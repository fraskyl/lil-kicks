---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>>
  <meta name="description" content="Track your baby's kicks during pregnancy">
  <title>{title}</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="stylesheet" href="https://use.typekit.net/wmx1lqk.css">
  <style>
    :root {
      --cyan: #06D8FC;
      --cyan-light: #5CE5FF;
      --cyan-dark: #0499B8;
      --cyan-darker: #026B85;
      --cream: #F5FBFD;
      --accent: #0AC2E8;
      --accent-light: #6FE3FF;
      --charcoal: #0A1F28;
      --text-dark: #1A2B33;
      --warm-white: #FAFEFF;
      
      --shadow-sm: 0 2px 8px rgba(6, 216, 252, 0.12);
      --shadow-md: 0 4px 16px rgba(6, 216, 252, 0.18);
      --shadow-lg: 0 8px 32px rgba(6, 216, 252, 0.24);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: "rucksack", sans-serif;
      font-weight: 400;
      font-style: normal;
      background: linear-gradient(135deg, var(--cream) 0%, var(--warm-white) 100%);
      color: var(--charcoal);
      min-height: 100vh;
      line-height: 1.6;
      -webkit-font-smoothing: antialiased;
      position: relative;
      overflow-x: hidden;
    }

    body::before {
      content: '';
      position: fixed;
      top: -50%;
      right: -20%;
      width: 80%;
      height: 80%;
      background: radial-gradient(circle, rgba(6, 216, 252, 0.08) 0%, transparent 70%);
      pointer-events: none;
      z-index: 0;
    }

    body::after {
      content: '';
      position: fixed;
      bottom: -30%;
      left: -10%;
      width: 60%;
      height: 60%;
      background: radial-gradient(circle, rgba(10, 194, 232, 0.06) 0%, transparent 70%);
      pointer-events: none;
      z-index: 0;
    }

    h1, h2, h3 {
      font-family: 'Rucksack', sans-serif;
      font-weight: 400;
      letter-spacing: -0.02em;
    }

    .container {
      position: relative;
      z-index: 1;
      max-width: 480px;
      margin: 0 auto;
      padding: 1.5rem;
      min-height: 100vh;
    }

    @media (min-width: 768px) {
      .container {
        padding: 2rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <slot />
  </div>
</body>
</html>
